{{> layout/header }}

<div class="container">
    <h2 class="mb-4 fw-bold">채용 공고 수정</h2>
    <form action="/board/{{board.id}}/update" method="post">
        <table class="table-resume-notice">
            <tr>
                <td class="tb-row">공고 제목</td>
                <td><input name="title" class="input-width30" type="text" value="{{board.title}}"></td>
            </tr>
        </table>

        <h4 class="fw-semibold mb-3">채용 분야 정보</h4>
        <table class="table-resume-notice">
            <tr>
                <td class="tb-row">채용 분야</td>
                <td><input name="field" type="text" value="{{board.field}}"></td>
            </tr>
            <tr>
                <td>포지션</td>
                <td>
                    <input name="position" type="text" value="{{board.position}}">
                </td>
            </tr>
            <tr>
                <td class="tb-row">업무 상세</td>
                <td><textarea name="content" class="textarea-work-size">{{board.content}}</textarea></td>
            </tr>
            <tr>
                <td class="tb-row">연봉</td>
                <td>
                    <input name="salary" type="text" value="{{board.salary}}">
                </td>
            </tr>
            <tr>
                <td>게시일</td>
                <td><input name="openingDate" type="date"></td>
            </tr>
            <tr>
                <td>마감일</td>
                <td><input name="closingDate" type="date"></td>
            </tr>
        </table>
        <br>
        <div class="button-post-cancel">
            <button type="button" onclick="location.href='/board/{{sessionUser.id}}'" class="btn btn-outline-dark">취소</button>
            <button type="submit" class="btn btn-outline-dark">수정</button>
        </div>
    </form>
</div>
<!-- 바디 end -->
{{>layout/footer}}