{{> layout/header }}
<!-- 기업 버튼 -->
{{#boardDetail}}
    <div class="sidenav" xmlns="http://www.w3.org/1999/html">
        <div class="card" style="width:150px">
            <!--평점-->
            <div class="card-footer" style="display: flex; justify-content: space-around">
                <div style="margin-top: 3px">
                    {{^rate}}
                        평점 ⭐
                    {{/rate}}
                    {{#rate}}
                        평점 ⭐ <b>{{rate}}</b>
                    {{/rate}}

                </div>
            </div>
            {{#pic}}
                <img class="card-img-top" src="/upload/{{imgFilename}}" alt="Card image" style="width:100%">
            {{/pic}}
            {{^pic}}
                <img class="card-img-top" src="../images/{{boardDetail.businessName}}.jpg" onerror="this.onerror=null; this.src='../images/chaeyong.jpg';" style="width:100%">
            {{/pic}}
            <div class="card-body">
                <h4 class="card-title text-center">{{businessName}}</h4>
                <div class="card-footer" style="text-align: center;">
                    <!-- 지원하기 버튼 -->
                    <div>
                        {{#sessionUser}}
                            {{^isEmployer}}
                                <form action="/board/{{boardDetail.id}}/applyForm" method="get">
                                    <button class="btn btn-primary">지원</button>
                                </form>
                            {{/isEmployer}}
                        {{/sessionUser}}
                        {{^sessionUser}}
                            <form action="/loginForm" method="get">
                                <button class="btn btn-primary">지원</button>
                            </form>
                        {{/sessionUser}}
                    </div>
                    <!-- 수정 삭제 버튼 -->
                    <div>
                        {{#boardOwner}}
                            <a href="/board/{{id}}/updateForm" method="get" class="btn btn-warning">수정</a>
                            <form action="/board/1/delete" method="post" onsubmit="return false">
                                <button class="btn btn-danger">삭제</button>
                            </form>
                        {{/boardOwner}}
                    </div>
                </div>
            </div>



            {{#sessionUser}}
                {{^isEmployer}}
                    {{^score}}
                        <form action="/rating/score/{{boardDetail.id}}" method="post">
                            <div class="card-footer">
                                <select id="rating" name="rating" style="width: 100%">
                                    <option value="1">1점</option>
                                    <option value="2">2점</option>
                                    <option value="3">3점</option>
                                    <option value="4">4점</option>
                                    <option value="5">5점</option>
                                </select>

                                <div align="right">
                                    <button class="btn btn-primary btn-sm" style="width: 100%; margin-top: 5px">평가하기</button>
                                </div>
                            </div>
                        </form>
                    {{/score}}


                    {{#score}}
                        평가를 완료하였습니다.
                    {{/score}}

                {{/isEmployer}}
            {{/sessionUser}}

        </div>
    </div>
    <!-- 게시글내용 -->
    <div class="container bg-light">
        <h2><b>{{title}}</b></h2>
        <hr>
        <div>
            <span>요약</span>
            <table class="table">
                <tr>
                    <th>근무지역</th>
                    <td>{{address}}</td>
                </tr>
                <tr>
                    <th>모집분야</th>
                    <td>{{field}}</td>
                </tr>
                <tr>
                    <th>포지션</th>
                    <td>{{position}}</td>
                </tr>
                <tr>
                    <th>연봉</th>
                    <td>{{salary}}</td>
                </tr>
            </table>
        </div>
        <div class="m-4 p-2">
            <div>
                <h3>내용</h3>
                <div class="bg-white">
                    {{content}}
                </div>
            </div>
            <hr>
            <div>
                <h4>채용공고 게시일</h4>
                <div>{{openingDate}}</div>
            </div>
            <hr>
            <div>
                <h4>채용공고 마감일</h4>
                <div>{{closingDate}}</div>
            </div>
            <hr>
            <div>
                <h4>연락처</h4>
                <div>전화번호: {{phoneNumber}}</div>
                <div>이메일: {{email}}</div>
            </div>
            <hr>
            <div>
                <h4>근무지역</h4>
                <div>지도</div>
            </div>
        </div>
    </div>
{{/boardDetail}}
<!-- 바디 end -->
{{>layout/footer}}