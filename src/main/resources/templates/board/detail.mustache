{{>layout/header}}
<!-- 바디 start -->
<div class="div-card-container">
    <div class="card div-card">
        {{#boardDetail}}
            <div class="card-header card-title">
                <h2>{{businessName}}</h2>
            </div>
            <div class="card-body">
                <h4 class="card-title">{{title}}</h4>
                <table class="table">
                    <tr>
                        <td>근무 지역</td>
                        <td>{{address}}</td>
                    </tr>
                    <tr>
                        <td>채용 분야</td>
                        <td>{{field}}</td>
                    </tr>
                    <tr>
                        <td>포지션</td>
                        <td>{{position}}</td>
                    </tr>
                    <tr>
                        <td>연봉</td>
                        <td>{{salary}}</td>
                    </tr>
                </table>
                <h4 class="card-title">상세 내용</h4>
                <div class="form-control" style="height: 300px">{{content}}</div>
                <h4 class="card-title">기타</h4>
                <table class="table">
                    <tr>
                        <td>게시일</td>
                        <td>{{openingDate}}</td>
                    </tr>
                    <tr>
                        <td>마감일</td>
                        <td>{{closingDate}}</td>
                    </tr>
                    <tr>
                        <td>연락처</td>
                        <td>{{phoneNumber}}</td>
                    </tr>
                    <tr>
                        <td>이메일</td>
                        <td>{{email}}</td>
                    </tr>
                </table>
            </div>
            <div class="card-footer">
                <!--기술 스택?-->
            </div>
        {{/boardDetail}}
    </div>
    <div class="sidenav-container">
        <div class="sidenav">
            <div class="card" style="width:150px">
                {{#pic}}
                    <img class="card-img-top" src="/upload/{{imgFilename}}" style="width:100%">
                {{/pic}}
                {{^pic}}
                    <img class="card-img-top" src="../images/{{boardDetail.businessName}}.jpg" style="width:100%">
                {{/pic}}
                <div class="card-body">
                    <h4 class="card-title text-center">{{boardDetail.businessName}}</h4>
                    <div class="card-footer" style="text-align: center;">
                        <!-- 지원하기 버튼 -->
                        <div>
                            {{#sessionUser}}
                                {{^isEmployer}}
                                    <form action="/board/{{boardDetail.id}}/applyForm" method="get">
                                        <button class="btn btn-primary">지원</button>
                                    </form>
                                {{/isEmployer}}
                            {{/sessionUser}}
                            {{^sessionUser}}
                                <form action="/loginForm" method="get">
                                    <button class="btn btn-primary">지원</button>
                                </form>
                            {{/sessionUser}}
                        </div>
                        <!-- 수정 삭제 버튼 -->
                        <div>
                            {{#boardDetail.boardOwner}}
                                <a href="/board/{{boardDetail.id}}/updateForm" class="btn btn-warning">수정</a>
                                <form action="/board/{{boardDetail.id}}/delete" method="post" onsubmit="return false">
                                    <button class="btn btn-danger">삭제</button>
                                </form>
                            {{/boardDetail.boardOwner}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- 바디 end -->
{{>layout/footer}}