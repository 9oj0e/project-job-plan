{{> layout/header }}
<div class="div-body">
    <div class="div-layout">
        <div class="d-flex justify-content-between">
            <h3><b>내 정보</b></h3>
            <form action="/user/{{sessionUser.id}}/updateForm" class="justify-content-end">
                <button class="btn btn-outline-primary">수정</button>
                <button class="btn btn-primary">탈퇴</button>
            </form>
        </div>
        <div class="div-information">
            <div class="div-information-grid">
                <div class="card mt-5" style="width:200px">
                    <img class="card-img" src="../images/naver logo.png" alt="Card image" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">{{user.name}}</h4>
                        <div style="display: grid; grid-template-columns: 1fr 1fr; grid-column-gap: 10px">
                        <button class="btn btn-outline-primary">수정</button>
                        <button class="btn btn-primary">삭제</button>
                        </div>
                    </div>
                </div>
            </div>
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th><h3>기업정보</h3></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th>아이디</th>
                        <td>{{user.username}}</td>
                    </tr>
                    <tr>
                        <th>비밀번호</th>
                        <td>{{user.password}}</td>
                    </tr>
                    <tr>
                        <th>이름</th>
                        <td>{{user.name}}</td>
                    </tr>
                    <tr>
                        <th>생년월일</th>
                        <td>{{user.birthdate}}</td>
                    </tr>
                    <tr>
                        <th>성별</th>
                        <td>{{user.gender}}</td>
                    </tr>
                    <tr>
                        <th>휴대전화</th>
                        <td>{{user.phoneNumber}}</td>
                    </tr>
                    <tr>
                        <th>주소</th>
                        <td>{{user.address}}</td>
                    </tr>
                    <tr>
                        <th>E-MAIL</th>
                        <td>{{user.email}}</td>
                    </tr>
                    <tr>
                        <th>사업자번호</th>
                        <td>{{user.employerIdNumber}}</td>
                    </tr>
                    <tr>
                        <th>회사명</th>
                        <td>{{user.businessName}}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="div-layout">
        <div class="div-header d-flex justify-content-between">
            <h3><b>공고 관리</b></h3>
            <form action="/board/uploadForm" method="get" class="justify-content-end">
                <button class="btn btn-primary">추가</button>
            </form>
        </div>

        <table class="table">
            <tr class="table">
                <th class="col-1" >공고제목</th>
            </tr>
        </table>
        <div class="div-announcement">
            <table class="table-image">
                {{#boardList}}
                    <tr>
                        <td class="td-announcement td-image">{{title}}
                            <div class="button-group button-inline">
                                <form action="/board/{{id}}/updateForm">
                                    <button class="btn btn-outline-primary">수정</button>
                                </form>
                                <form action="/board/{{id}}/delete" method="post">
                                    <button class="btn btn-primary">삭제</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {{/boardList}}
            </table>
        </div>
    </div>

    <div class="div-layout">
        <div class="div-header">
            <h3><b>지원자 리스트</b></h3>
        </div>

<!--        <div class="div-post-col">-->
<!--            <div><b>공고제목</b></div>-->
<!--            <div><b>지원자명</b></div>-->
<!--            <div><b>이력서 제목</b></div>-->
<!--            <div><b>지원 날짜</b></div>-->
<!--        </div>-->

        <table class="table">
            <tr class="table">
                <th class="col-1" >공고제목</th>
                <th class="col-1">지원자명</th>
                <th class="col-1">이력서 제목</th>
                <th class="col-1">지원 날짜</th>
                <th class="col-1"> </th>
            </tr>
        </table>
        <div class="div-applicant">
            <table class="table-image">
                <tr>
                    <td class="td-applicant td-image">
                        <div><a href="/board/{{id}}">공고제목</a></div>
                        <div>지원자명</div>
                        <div><a href="/resume/{{id}}">이력서 제목</a></div>
                        <div>지원 날짜</div>
                        <div class="button-group button-inline">
                            <button class="btn btn-outline-primary">불합격</button>
                            <button class="btn btn-primary">합격</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<!-- 바디 end -->
{{>layout/footer}}