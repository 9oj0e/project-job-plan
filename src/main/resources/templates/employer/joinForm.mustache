{{>layout/header}}
<style>
    * {
        margin: 0px;
        box-sizing: border-box;
    }

    .h2-text {
        margin: 10px 0 20px;
        text-align: center;
    }

    .div-main {
        margin: 5vw 5%;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px #000;
    }

    .div-phone {
        display: flex;

    }

    .div-phone-number {
        width: 100%;
        align-items: center;
        justify-content: center;


    }

    .div-hyphen {
        margin: 5px;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }

    .div-gender {
        display: flex;
        align-items: center;
        font-size: 15px;
        margin-top: 2px;

    }

    .input-join {
        width: 100%;
        padding: 5px;
        margin: 2px 0;
        height: 35px;
    }

    .input-button-join {
        padding: 5px;
        margin: 2px 0;
        margin-top: 10px;
        width: 100%;
        height: 35px;
        background: #38f;
        color: rgb(255, 255, 255);
        border: none;
        border-radius: 5px;
    }

    .p-text {
        font-size: 13px;
        margin-top: 10px;
        color: rgb(66, 66, 66);
    }

    .hr-line {
        margin-bottom: 6px;
    }

    .select-category {
        width: 100%;
        height: 30px;
        margin-top: 2px;
    }
</style>
<main class="main-size">
    <div class="div-main">
        <h2 class="h2-text">기업 회원가입</h2>
        <hr class="hr-line">
        <form action="/join" method="post" enctype="application/x-www-form-urlencoded">
        <h3 class="d-flex justify-content-end">개인 정보</h3>
            <div class="mb-3">
                <p class="p-text">아이디</p>
                <input type="text" name="username" id="username" placeholder="Enter username.." value="ssar" class="form-control"
                       required>
            </div>
            <div class="mb-3">
                <p class="p-text">비밀번호</p>
                <input type="password" name="password" id="password" placeholder="Enter password.." value="1234" class="form-control"
                       required>
            </div>
            <div class="mb-3">
                <p class="p-text">이름</p>
                <input type="text" name="name" pattern="[^(가-힣a-zA-Z)]" id="name" placeholder="Enter name.." value="JUHO초이" class="form-control" required>
            </div>
            <div class="mb-3">
                <p class="p-text">생년월일</p>
                <input type="date" name="birthdate" id="birthdate" value="1988-04-01" class="form-control" required>
            </div>
            <div class="mb-3">
                <p class="p-text">성별</p>
                <span>
                <span>남자</span>
                <input type="radio" name="gender" id="gender" value='M' required>
            </span>
                <span>
                <span>여자</span>
                <input type="radio" name="gender" id="gender" value='F' required>
            </span>
            </div>
            <!--
            <div class="mb-3">
                <p class="p-text">휴대전화</p>
                <input type="tel" pattern="[0-9]{2,3}-[0-9]{3,4}-[0-9]{4}" name="phoneNumber" id="phoneNumber" value="010-9273-0000" class="form-control" required>
            </div>
            -->

            <div class="mb-3">
                <p class="p-text">휴대전화</p>
                <input type="tel" pattern="[0-9]{9,11}" title="번호만 입력하세요" name="phoneNumber" id="phoneNumber" value="01022227460" class="form-control" required>
            </div>
            <br>
            <h3 class="d-flex justify-content-end">기업 정보</h3>
            <input type="hidden" name="isEmployer" value="true"> <!--기업 회원 여부 true-->
            <div class="mb-3">
                <p class="p-text">사업자 등록 번호</p>
                <input type="tel" pattern="[0-9]{10}" title="번호만 입력하세요" name="employerIdNumber" id="employerIdNumber" value="0000000000" class="form-control" required>
            </div>
            <div class="mb-3">
                <p class="p-text">기업 이름</p>
                <input type="text" name="businessName" id="businessName" value="그린컴퓨터아카데미" class="form-control" required>
            </div>
            <div class="mb-3">
                <p class="p-text">사업지 주소</p>
                <input type="text" name="address" id="address" value="부산진구 중앙대로 700번길" class="form-control" required>
            </div>
            <div class="mb-3">
                <p class="p-text">이메일</p>
                <input type="email" name="email" id="email" placeholder="Enter email.." value="ssar@nate.com" class="form-control" required>
            </div>
        <!-- 업종 삭제 (JUHO CHOI)
        <p class="p-text">업종</p>
        <select class="select-category">
            <option value="선택">분야를 선택하세요</option>
            <option value="기획">기획</option>
            <option value="마케팅">마케팅</option>
            <option value="회계">회계</option>
            <option value="IT 개발">IT 개발</option>
        </select>
         -->
        <input type="submit" value="회원가입" class="input-button-join">
        </form>

    </div>
    <!-- 바디 end -->
{{>layout/footer}}