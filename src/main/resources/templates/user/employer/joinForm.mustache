{{>layout/header}}
<style>
    * {
        margin: 0px;
        box-sizing: border-box;
    }

    .h2-text {
        margin: 10px 0 20px;
        text-align: center;
    }

    .div-main {
        margin: 5vw 5%;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px #000;
    }

    .div-phone {
        display: flex;

    }

    .div-phone-number {
        width: 100%;
        align-items: center;
        justify-content: center;


    }

    .div-hyphen {
        margin: 5px;
        align-items: center;
        justify-content: center;
        margin-top: 10px;
    }

    .div-gender {
        display: flex;
        align-items: center;
        font-size: 15px;
        margin-top: 2px;

    }

    .input-join {
        width: 100%;
        padding: 5px;
        margin: 2px 0;
        height: 35px;
    }

    .input-button-join {
        padding: 5px;
        margin: 2px 0;
        margin-top: 10px;
        width: 100%;
        height: 35px;
        background: #38f;
        color: rgb(255, 255, 255);
        border: none;
        border-radius: 5px;
    }

    .p-text {
        font-size: 13px;
        margin-top: 10px;
        color: rgb(66, 66, 66);
    }

    .hr-line {
        margin-bottom: 6px;
    }

    .select-category {
        width: 100%;
        height: 30px;
        margin-top: 2px;
    }
</style>
<main class="main-size">
    <div class="div-main">
        <h2 class="h2-text">기업 회원가입</h2>
        <hr class="hr-line">
        <h3 class="d-flex justify-content-end">개인 정보</h3>
        <p class="p-text">이름</p>
        <input type="text" id="username" placeholder="이름을 입력하세요" class="form-control" required>

        <p class="p-text">아이디</p>
        <input type="text" id="id" placeholder="id" class="form-control" required>

        <p class="p-text">비밀번호</p>
        <input type="password" id="pw" placeholder="password" class="form-control" required>


        <p class="p-text">생년월일</p>
        <input type="date" id="birthdate" placeholder="birthdate" class="form-control" required>

        <p class="p-text">성별</p>
        <div class="div-gender">
            <div>남자</div>&nbsp;
            <div><input type="radio" name="gender" value="남자" class="div-gender-radio"></div>
            <div>여자</div>&nbsp;
            <div><input type="radio" name="gender" value="여자" class="div-gender-radio"></div>

        </div>

        <p class="p-text">휴대전화</p>
        <div class="div-phone">
            <div class="div-phone-number">
                <input type='tel' name='phone1' value="010" class="form-control">
            </div>
            <div class="div-hyphen">-</div>
            <div class="div-phone-number">
                <input type='tel' name='phone2' required class="form-control">
            </div>
            <div class="div-hyphen">-</div>
            <div class="div-phone-number">
                <input type='tel' name='phone3' required class="form-control">
            </div>
        </div>

        <p class="p-text">주소</p>
        <input type="text" id="pw" placeholder="주소를 입력하세요" class="form-control" disabled>

        <p class="p-text">이메일</p>
        <input type="email" id="pw" placeholder="email" class="form-control" required>
        <br>
        <h3 class="d-flex justify-content-end">기업 정보</h3>
        <p class="p-text">사업자 등록 번호</p>
        <input type="text" id="username" placeholder="사업자 번호를 입력하세요" class="form-control" required>

        <p class="p-text">기업 이름</p>
        <input type="text" id="companyName" placeholder="회사 이름을 입력하세요" class="form-control" required>

        <p class="p-text">사업지 주소</p>
        <input type="text" id="pw" placeholder="주소를 입력하세요" class="form-control" required>
