{{> layout/header}}
<style>
    * {
        margin: 0px;
        box-sizing: border-box;
    }

    .h2-text {
        margin: 10px 0 20px;
        text-align: center;
    }

    .div-main {
        margin: 20vw 15%;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px #000;
    }

    .p-text {
        font-size: 13px;
        margin-top: 10px;
        color: rgb(66, 66, 66);
    }

    .hr-line {
        margin-bottom: 6px;
    }

    .join-select {
        text-align: center;
        display: grid;
        grid-template-columns: 1fr 1fr;

    }

    .join-select-box {
        margin: 5px 0px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        background-color: #eee;
        border-radius: 5px;
        height: 50px;

    }

    .input-button-ok {
        padding: 5px;
        margin: 2px 0;
        margin-top: 10px;
        width: 100%;
        height: 35px;
        background: #38f;
        color: rgb(255, 255, 255);
        border: none;
        border-radius: 5px;
    }

    .join-select-personal {
        margin-right: 5px;
    }

    .join-select-company {
        margin-left: 5px;
    }
</style>
<div class="div-main">
    <h2 class="h2-text">회원 유형을 선택하세요</h2>
    <hr class="hr-line">
    <div class="join-select">
        <button class="join-select-box join-select-personal" onclick="location.href='/user/joinForm'">개인
            회원
        </button>
        <button class="join-select-box join-select-company" onclick="location.href='/employer/joinForm'">기업
            회원
        </button>
    </div>


</div>
<!-- 바디 end -->
{{>layout/footer}}