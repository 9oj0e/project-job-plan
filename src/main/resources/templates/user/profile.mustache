{{> layout/header }}
<div class="div-body">
    <div class="div-layout">
        <div class="d-flex justify-content-between">
            <h3><b>내 정보</b></h3>
            <form action="/user/{{sessionUser.id}}/updateForm" class="justify-content-end">
                <button class="btn btn-outline-primary">수정</button>
                <button class="btn btn-primary">탈퇴</button>
            </form>
        </div>
        <div class="div-information">
            <div>
                <div class="card mt-5" style="width:150px">
                    <img class="card-img" src="../images/avatar.png" alt="Card image" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">{{user.name}}</h4>
                        <button class="btn btn-outline-primary">수정</button>
                        <button class="btn btn-primary">삭제</button>
                    </div>
                </div>
            </div>
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th><h3>개인정보</h3></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>ID</td>
                        <td>{{user.username}}</td>
                    </tr>
                    <tr>
                        <th>PW</th>
                        <td>{{user.password}}</td>
                    </tr>
                    <tr>
                        <td>이름</td>
                        <td>{{user.name}}</td>
                    </tr>
                    <tr>
                        <td>생년월일</td>
                        <td>{{user.birthdate}}</td>
                    </tr>
                    <tr>
                        <td>성별</td>
                        <td>{{user.gender}}</td>
                    </tr>
                    <tr>
                        <td>휴대전화</td>
                        <td>{{user.phoneNumber}}</td>
                    </tr>
                    <tr>
                        <td>주소</td>
                        <td>{{user.address}}</td>
                    </tr>
                    <tr>
                        <td>E-MAIL</td>
                        <td>{{user.email}}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="form-control">
                    <div>보유기술</div>
                    <div>
                        <button>Java</button>
                        <button>Spring</button>
                        <button>HTML</button>
                        <button>JavaScript</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="div-layout">
        <div class="div-header d-flex justify-content-between">
            <h2><b>내 이력서</b></h2>
            <form action="/resume/uploadForm" method="get">
                <button class="btn btn-primary">추가</button>
            </form>
        </div>


        <div class="div-resume">
            <table class="table-image">
                <tr>
                    <td class="td-resume td-image">이력서 데이터 불러오자
                        <div class="button-group">
                            <form action="/resume/1/updateForm">
                                <button class="btn btn-outline-primary">수정</button>
                            </form>
                            <button class="btn btn-primary">삭제</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="td-resume td-image">이력서 데이터 불러오자
                        <div class="button-group">
                            <form action="/resume/1/updateForm">
                                <button class="btn btn-outline-primary">수정</button>
                            </form>
                            <button class="btn btn-primary">삭제</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>
<!-- 바디 end -->
{{>layout/footer}}}