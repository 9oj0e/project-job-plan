{{> layout/header }}
<div class="div-body">
    <div class="div-layout">
        <div class="d-flex justify-content-between">
            <h3><b>내 정보</b></h3>
            <form action="/user/{{sessionUser.id}}/updateForm" class="justify-content-end">
                <button class="btn btn-outline-primary">수정</button>
                <button class="btn btn-primary">탈퇴</button>
            </form>
        </div>
        <div class="div-information">
            <div>
                <div class="card mt-5" style="width:150px">
                    <img class="card-img" src="../images/avatar.png" alt="Card image" style="width:100%">
                    <div class="card-body">
                        <h4 class="card-title">{{user.name}}</h4>
                        <button class="btn btn-outline-primary">수정</button>
                        <button class="btn btn-primary">삭제</button>
                    </div>
                </div>
            </div>
            <div>
                <table class="table">
                    <thead>
                    <tr>
                        <th><h3>개인정보</h3></th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{user.username}}</td>
                    </tr>
                    <tr>
                        <th>PW</th>
                        <td>{{user.password}}</td>
                    </tr>
                    <tr>
                        <th>이름</th>
                        <td>{{user.name}}</td>
                    </tr>
                    <tr>
                        <th>생년월일</th>
                        <td>{{user.birthdate}}</td>
                    </tr>
                    <tr>
                        <th>성별</th>
                        <td>{{user.gender}}</td>
                    </tr>
                    <tr>
                        <th>휴대전화</th>
                        <td>{{user.phoneNumber}}</td>
                    </tr>
                    <tr>
                        <th>주소</th>
                        <td>{{user.address}}</td>
                    </tr>
                    <tr>
                        <th>E-MAIL</th>
                        <td>{{user.email}}</td>
                    </tr>
                    </tbody>
                </table>
                <div class="form-control">
                    <div>보유기술</div>
                    <div>
                        <button>Java</button>
                        <button>Spring</button>
                        <button>HTML</button>
                        <button>JavaScript</button>
                    </div>
                </div>
            </div>
        </div>
    </div>


<!--내 이력서 보기-->
    <div class="div-layout">
        <div class="div-header d-flex justify-content-between">
            <h2><b>나의 이력서</b></h2>
            <form action="/resume/uploadForm" method="get">
                <button class="btn btn-primary">추가</button>
            </form>
        </div>

        <div class="div-resume-col">
        <div><b>&nbsp;No</b></div>
        <div><b>제목</b></div>
        <div><b>&nbsp;&nbsp;&nbsp;&nbsp;작성 날짜</b></div>
        <div></div>
        </div>

        <div class="div-resume">
            <table class="table-image">
                {{#resumeList}}
                <tr>
                    <td class="td-resume td-image">
                        <!-- Row for 제목 (Title) -->
                        <div>{{title}}</div>

                        <!-- Row for 지원 날짜 (Application Date) -->
                        <div>{{createdAt}}</div>
                        <div class="button-group">
                            <form action="/resume/{{id}}/updateForm">
                                <button class="btn btn-outline-primary">수정</button>
                            </form>
                            <form action="/resume/{{id}}/delete" method="post">
                                <button class="btn btn-primary">삭제</button>
                            </form>
                        </div>
                    </td>
                </tr>
                {{/resumeList}}
            </table>
        </div>
    </div>


<!--내 지원현황 보기-->
    <div class="div-layout">
        <div class="div-header d-flex justify-content-between">
            <h2><b>나의 지원현황</b></h2>
        </div>

        <div class="div-apply-col">
            <div><b>&nbsp;No</b></div>
            <div><b>&nbsp;&nbsp;제목</b></div>
            <div><b>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;지원한 회사</b></div>
            <div><b>&nbsp;지원 날짜</b></div>
            <div></div>
            <div></div>
            <div></div>
        </div>

        <div class="div-resume">
            <table class="table-image">
                <tr>
                    <td class="td-resume td-image">
                        <!--No -->
                        <div>1</div>

                        <!--제목-->
                        <div>이력서 제목</div>

                        <!--지원한 회사-->
                        <div>지원한 회사</div>

                        <!--지원 날짜-->
                        <div>2024-03-04</div>

                        <div class="button-group">
                            <form action="/resume/{{id}}/updateForm">
                                <button class="btn btn-outline-primary">이력서 보기</button>
                            </form>
                            <button class="btn btn-primary">공고 보기</button>
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>


</div>
<!-- 바디 end -->
{{>layout/footer}}