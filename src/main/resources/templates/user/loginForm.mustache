{{> layout/header }}
<style>
    * {
        margin: 0px;
        box-sizing: border-box;
    }

    h2 {
        margin: 10px 0 20px;
        text-align: center;
    }

    .main {
        margin: 5vw 5%;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 5px #000;
    }

    input {
        width: 100%;
        padding: 5px;
        margin: 2px 0;
        height: 35px;
    }

    input[type=submit] {

        background: #38f;
        color: rgb(255, 255, 255);
        border: none;
        border-radius: 5px;
    }

    p {
        font-size: 13px;
        margin-top: 10px;
        color: rgb(66, 66, 66);
    }

    hr {
        margin-bottom: 6px;
    }

    .login-select {
        text-align: center;
        display: grid;
        grid-template-columns: 1fr 1fr;

    }

    .login-select-box {
        margin: 2px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 1px solid #eee;
        background-color: #eee;
        border-radius: 5px;
        height: 30px;

    }

    .login-find {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr;
    }

    .login-find-select {
        font-size: small;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 15px 0;
        color: rgb(131, 131, 131);
    }
</style>
<div class="main">
    <h2>로그인</h2>
    <hr>
    <form action="/login" method="post">
        <div class="login-select">
            <button class="login-select-box">개인 회원</button>
            <button class="login-select-box">기업 회원</button>
        </div>
        <p>아이디 입력</p>
        <input type="text" id="id" placeholder="id">
        <p>비밀번호 입력</p>
        <input type="password" id="pw" placeholder="password">

        <div class="login-find">
            <div class="login-find-select">아이디 찾기</div>
            <div class="login-find-select">비밀번호 찾기</div>
            <div class="login-find-select">회원가입</div>
        </div>

        <input type="submit" value="로그인"></input>
    </form>

</div>
<!-- 바디 end -->
{{>layout/footer}}